package calculando;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;

public class Calculadora {
	//Parte interna da Classe
	
	public static void main(String[] args) throws IOException {
		//Metodo Main
		
		
		
		
	}
	//Permite ler a String do teclado e retorna
	static String cin() throws IOException {
		InputStreamReader in = new InputStreamReader(System.in);
		BufferedReader br = new BufferedReader(in);
		
		String str = br.readLine();
		return str;
	}
	//Metodo teste para certificar que os caracteres s√£o todos validos para numero
	static double cind() throws IOException {
		String str = cin();
		double d = 0;
		int i=0;
		while (i<str.length()) {
			if((str.charAt(i)>= '0' && str.charAt(i) <= '9' ) || str.charAt(i) == '.'||
					str.charAt(i) == '-') {i++;continue;}
			else return d;
		}
		d = Double.parseDouble(str);
		return d;
	}

}

